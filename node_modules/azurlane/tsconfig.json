{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": false,
        "strict": true,
        "rootDir": ".",
        "outDir": "lib"
    },
    "exclude": [
        "node_modules",
        "lib",
        "examples",
        "**/*.test.ts"
    ]
}