{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "title": {
        "text": "COVID-19 in ${{REGION_NAME}}",
        "subtitle": "Graph drawn by Kumo#4902",
        "encode": {
            "title": {
                "enter": {
                    "fill": {
                        "value": "white"
                    },
                    "fontSize": {
                        "value": 16
                    }
                }
            },
            "subtitle": {
                "enter": {
                    "fill": {
                        "value": "grey"
                    }
                }
            }
        }
    },
    "width": 1280,
    "height": 720,
    "padding": 5,
    "legends": [
        {
            "fill": "color",
            "title": "Legend",
            "titleColor": "white",
            "labelColor": "lightgrey",
            "encode": {
                "title": {
                    "update": {
                        "fontSize": {
                            "value": 14
                        }
                    }
                },
                "labels": {
                    "update": {
                        "fontSize": {
                            "value": 12
                        }
                    }
                }
            }
        }
    ],
    "data": [
        {
            "name": "table",
            "values": []
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "point",
            "range": "width",
            "domain": {
                "data": "table",
                "field": "date"
            }
        },
        {
            "name": "y",
            "type": "pow",
            "exponent": 0.8,
            "range": "height",
            "nice": true,
            "zero": true,
            "domain": {
                "data": "table",
                "field": "value"
            }
        },
        {
            "name": "color",
            "type": "ordinal",
            "range": "category",
            "domain": {
                "data": "table",
                "field": "c"
            }
        }
    ],
    "axes": [
        {
            "orient": "bottom",
            "scale": "x",
            "title": "Date",
            "labelAngle": -70,
            "labelPadding": 10,
            "titleColor": "white",
            "labelColor": "lightgrey",
            "tickColor": "grey",
            "domainColor": "grey"
        },
        {
            "orient": "right",
            "scale": "y",
            "title": "Value",
            "titleColor": "white",
            "labelColor": "lightgrey",
            "tickColor": "grey",
            "domainColor": "grey"
        }
    ],
    "marks": [
        {
            "type": "group",
            "from": {
                "facet": {
                    "name": "series",
                    "data": "table",
                    "groupby": "c"
                }
            },
            "marks": [
                {
                    "type": "line",
                    "from": {
                        "data": "series"
                    },
                    "encode": {
                        "enter": {
                            "x": {
                                "scale": "x",
                                "field": "date"
                            },
                            "y": {
                                "scale": "y",
                                "field": "value"
                            },
                            "stroke": {
                                "scale": "color",
                                "field": "c"
                            },
                            "strokeWidth": {
                                "value": 3
                            },
                            "interpolate": [
                                {
                                    "value": "basis"
                                }
                            ],
                            "fillOpacity": {
                                "value": 1
                            }
                        }
                    }
                },
                {
                    "type": "symbol",
                    "from": {
                        "data": "series"
                    },
                    "encode": {
                        "enter": {
                            "x": {
                                "scale": "x",
                                "field": "date"
                            },
                            "y": {
                                "scale": "y",
                                "field": "value"
                            },
                            "fill": {
                                "scale": "color",
                                "field": "c"
                            },
                            "width": {
                                "value": 5
                            },
                            "height": {
                                "value": 5
                            },
                            "fillOpacity": {
                                "value": 0.7
                            }
                        }
                    }
                }
            ]
        }
    ]
}
